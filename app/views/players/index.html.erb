<h1>Players Listing</h1>
 
<% if is_admin %>
	<h2 class="newPlayer"><%= link_to 'New Player', new_player_path %></h2>
<% end %>
<table>
  <tr>
	<%if is_admin %><th>Membership Number</th><% end %>
    <th>Player</th>
    <th>Telephone</th>
    <th>Future Bookings</th>
  </tr>
  <% @players.each do |player| %>
    <tr>
		<%if is_admin %><td class="first"><%= player.membership_number %></td><% end %>
		<td><%= link_to (player.first_name + ' ' + player.last_name), player_path(player.id), :class => 'playerIndex' %></td>
		<td><%= player.tel %></td>
		<td><%= player.future_bookings.count %></td>
    </tr>
  <% end %>
</table>
<h1>Enter a new Player</h1>
<%= form_for @player, url: players_path do |f| %>
 <% if @player.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @player.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
	<%= f.label 'Membership Number' %><%= f.text_field :membership_number %><br>
	<%= f.label 'Membership Type' %><%= f.collection_select :membership_type_id, @membership_types.all, :id, :membership_type %><br>
    <%= f.label 'First Name' %><%= f.text_field :first_name %><br>
    <%= f.label 'Last Name' %><%= f.text_field :last_name %><br>  
	<%= f.label 'Tel' %><%= f.text_field :telephone %><br>  
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
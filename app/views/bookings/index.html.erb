<h1>Tynemouth Squash Rackets Club - Court Booking</h1>

<table>
<% if !@isBookingTime %>
	<tr class="first"><td colspan="20">Court booking is not available until the Club opens for the day</td></tr>
<% end %>
<tr>
	<% @courts.each do |court| %>
	<th colspan="1"> Court <%= court.id %></th>
	<% end %>
</tr>

<% (1..@slots - 1).each do |i| %>
<tr>
	<td><%= render "timeSlots" , :timeSlot => @court5Slots[i], :bookings => @daysBookings, :day => @day, :court_id => 4 %></td>
	<td><%= render "timeSlots" , :timeSlot => @court4Slots[i], :bookings => @daysBookings, :day => @day, :court_id => 3 %></td>
	<td><%= render "timeSlots" , :timeSlot => @court3Slots[i], :bookings => @daysBookings, :day => @day, :court_id => 2 %></td>
	<td><%= render "timeSlots" , :timeSlot => @court2Slots[i], :bookings => @daysBookings, :day => @day, :court_id => 1 %></td>
	<td><%= render "timeSlots" , :timeSlot => @court1Slots[i], :bookings => @daysBookings, :day => @day, :court_id => 0 %></td>
</tr>
 <% end %> 
</table>

<div id="clearfix"></div>

<div class="links"> 
	<% if @day != 0 %><%= link_to "Today", { :day => 0 }, :id => 'change_day' %><% end %>
	<% if @day != 21 %><%= link_to "+3 Weeks", { :day => 21 }, :class => 'last_day', :id => 'change_day'%><% end %>
</div>

<div class="date">
	<%= link_to "<", {:day => (@day - 1)}, :id => 'change_day' %>
	
	<%= @bookingDay %>
	
	<% if is_admin %>
		<%= link_to ">", {:day => (@day + 1)}, :id => 'change_day' %>
	<% else %>
		<%if @day < 21 %><%= link_to ">", {:day => (@day + 1)}, :id => 'change_day' %><% else %> <%= link_to "No more courts", '' %><% end %>
	<% end %>
</div>

<div id="clearfix"></div>
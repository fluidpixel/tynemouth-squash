<p><%= @greeting %>,</p>

<% if @bookings %>
		<% @bookings.each do |booking| %>
			<p><%= booking.id %> | <%= booking.court.court_name %> | <%= booking.start_time.strftime("%H:%M") %> <%= booking.player.first_name %> <%= booking.player.last_name %><% if booking.vs_player_name %> vs <%= booking.vs_player_name %><% end %></p>
	<% end %>
<% end %>

<p>Print them for reference or 'just in case'</p>
